	<modelVersion>4.0.0</modelVersion>
	<groupId>nl.utwente</groupId>
	<artifactId>DeepWiki</artifactId>
	<packaging>jar</packaging>
	<name>DeepWiki</name>
	<version>1.0.0-SNAPSHOT</version>
